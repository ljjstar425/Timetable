<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 바: 뒤로가기 + 친구 이름 + 메뉴(점3개) -->
    <ImageButton
        android:id="@+id/btnBackFriend"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="뒤로가기"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/tvFriendName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/btnBackFriend"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteFriend"
        app:layout_constraintTop_toTopOf="@id/btnBackFriend"
        app:layout_constraintBottom_toBottomOf="@id/btnBackFriend"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp" />

    <ImageButton
        android:id="@+id/btnDeleteFriend"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_info"
        android:contentDescription="더보기"
        app:layout_constraintTop_toTopOf="@id/btnBackFriend"
        app:layout_constraintBottom_toBottomOf="@id/btnBackFriend"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- ScrollView + 시간표 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="false"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/btnBackFriend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <!-- 시간표 커스텀 뷰 -->
        <com.bar.timetable2.ui.timetable.view.TimetableView
            android:id="@+id/timetableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>