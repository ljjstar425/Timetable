<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 바: 뒤로가기 + 제목 + 친구 선택 버튼 -->
    <ImageButton
        android:id="@+id/btnBackMeeting"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_previous"
        android:contentDescription="뒤로가기"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMeetingTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Meeting 시간표"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/btnBackMeeting"
        app:layout_constraintEnd_toStartOf="@id/btnSelectFriends"
        app:layout_constraintTop_toTopOf="@id/btnBackMeeting"
        app:layout_constraintBottom_toBottomOf="@id/btnBackMeeting" />

    <Button
        android:id="@+id/btnSelectFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 선택"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBackMeeting"
        app:layout_constraintBottom_toBottomOf="@id/btnBackMeeting" />

    <!-- 시간표 뷰 (일단 MyTimetable과 같은 TimetableView 재사용) -->
    <com.bar.timetable2.ui.timetable.view.TimetableView
        android:id="@+id/timetableViewMeeting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnBackMeeting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
