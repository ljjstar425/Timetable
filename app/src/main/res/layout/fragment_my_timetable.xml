<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 헤더: 제목 + 사람 아이콘 + + 아이콘 -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="시간표"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnFriends"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:background="@android:color/transparent"
            android:contentDescription="친구 목록" />


        <!-- 수업 추가 + 아이콘 -->
        <ImageButton
            android:id="@+id/btnAddClass"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="수업 추가"
            android:layout_marginStart="8dp" />

        <!-- 사람들 아이콘 (Meeting 화면으로 이동용) -->
        <ImageButton
            android:id="@+id/btnMeeting"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_myplaces"
            android:contentDescription="친구 시간표 보기" />

    </LinearLayout>

    <!-- 시간표 커스텀 뷰 -->
    <com.bar.timetable2.ui.timetable.view.TimetableView
        android:id="@+id/timetableView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
